// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version":"0.2.0",
    "configurations":[
        {
            "name":"Run Extension",
            "type":"extensionHost",
            "request":"launch",
            "runtimeExecutable":"${execPath}",
            "args":[
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles":[
                "${workspaceFolder}/out/src/**/*.js"
            ],
            "preLaunchTask":"npm: watch"
        },
        {
            "name":"Run Extension With Sample",
            "type":"extensionHost",
            "request":"launch",
            "runtimeExecutable":"${execPath}",
            "args":[
                "--extensionDevelopmentPath=${workspaceFolder}",
                "${workspaceFolder}/sample"
            ],
            "outFiles":[
                "${workspaceFolder}/out/src/**/*.js"
            ],
            "preLaunchTask":"npm: watch"
        },
        {
            "name":"Run Extension With Debugging PDF Viewer",
            "type":"extensionHost",
            "request":"launch",
            "runtimeExecutable":"${execPath}",
            "args":[
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles":[
                "${workspaceFolder}/out/src/**/*.js"
            ],
            "preLaunchTask":"npm: watch",
            "env": {
                "LATEXWORKSHOP_VIEWER_PORT_TO_DEBUG": "31415"
            }
        },
        {
            "name": "Debug PDF Viewer with Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:31415/viewer.html",
            "webRoot": "${workspaceFolder}/viewer"
        }
    ]
}
